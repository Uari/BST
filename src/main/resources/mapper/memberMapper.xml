<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mapper.MemberMapper">

<select id="checkPwd" parameterType="map" resultType="String">
	select mbr_pwd
	from member
	where mbr_seq = #{mbr_seq}

</select>

<select id="memberList" parameterType="map"  resultType = "map">
  select a.mbr_seq, a.mbr_id, a.mbr_pwd, a.mbr_nm, a.mbr_birthdate, a.mbr_phone, a.mbr_email, 
					b.team_name, b.team_logo, a.mbr_role, a.mbr_address, a.mbr_postalcode
	from member a 
	inner join team b
		on  a.team_id = b.team_id
			<where>
				<if test="mbr_seq!=null">AND a.mbr_seq=#{mbr_seq}</if>
			</where>
</select>

<insert id="memberInsert" parameterType="map">
insert into member(mbr_id,mbr_pwd,mbr_nm,mbr_birthdate,mbr_phone,mbr_email,mbr_address,mbr_postalcode,mbr_role,team_id)
values(#{mbr_id},#{mbr_pwd},#{mbr_nm},#{mbr_birthdate},#{mbr_phone},#{mbr_email},#{mbr_address},#{mbr_postalcode},0,#{team_id})
</insert>

<update id="memberUpdate" parameterType="int">
  <!-- update member
              set  = #{}
              ,   = #{}
              ,   = #{}
      where  = #{} -->
</update>

<delete id="memberDelete" parameterType="int">
  <!-- delete from member where  = #{} -->
</delete>

	
</mapper>